[Unit]
Description=Watch file or directory and git commit all changes. run with:
# systemctl --user --now enable gitwatch@$(systemd-escape "'-r gitserv:/git/org.git' /home/lyterk/org").service

[Service]
Environment="SCRIPT_ARGS=%I"
ExecStart=/usr/bin/gitwatch $SCRIPT_ARGS
ExecStop=/bin/true

[Install]
WantedBy=default.target
