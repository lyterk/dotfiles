[Unit]
Description=Watch file or directory and git commit all changes. run with: systemctl --user --now enable gitwatch@$(systemd-escape "/home/kev/org").service

[Service]
Environment="SCRIPT_ARGS=%I"
ExecStart=/usr/local/bin/gitwatch $SCRIPT_ARGS
ExecStop=/bin/true

[Install]
WantedBy=default.target
